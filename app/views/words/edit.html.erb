<h1>Editing word</h1>

<% form_for(@word) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :dict_id, "Dictionary" %><br />
    <%= f.select(:dict_id, Dict.find(:all).collect {|d| [ d.description, d.id ] }) %>
  </p>
  <p>
    <%= f.label :keyword %><br />
    <%= f.text_field :keyword %>
  </p>
  <p>
    <%= f.label :definition %><br />
    <%= f.text_area :definition %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @word %> |
<%= link_to 'Back', words_path %>
